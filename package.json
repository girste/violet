{
  "name": "boilerplate-ultra-light",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./_site/style.css --watch",
    "dev:eleventy": "npx @11ty/eleventy --serve --port=3000",
    "build": "npm run build:css && npx @11ty/eleventy",
    "build:css": "tailwindcss -i ./src/styles.css -o ./_site/style.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.21",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}